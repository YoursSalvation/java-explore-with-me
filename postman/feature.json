{
  "info": {
    "name": "Feature â€” Comments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "userId", "value": "" },
    { "key": "categoryId", "value": "" },
    { "key": "eventId", "value": "" },
    { "key": "commentId", "value": "" }
  ],
  "item": [

    {
      "name": "Preparation",
      "item": [

        {
          "name": "Create user",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/admin/users",
            "body": {
              "mode": "raw",
              "raw": "{ \"email\": \"user@test.com\", \"name\": \"User\" }"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('201', () => pm.response.code === 201);",
                "pm.collectionVariables.set('userId', pm.response.json().id);"
              ]
            }
          }]
        },

        {
          "name": "Create category",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/admin/categories",
            "body": {
              "mode": "raw",
              "raw": "{ \"name\": \"Category\" }"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('201', () => pm.response.code === 201);",
                "pm.collectionVariables.set('categoryId', pm.response.json().id);"
              ]
            }
          }]
        },

        {
          "name": "Create event",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/users/{{userId}}/events",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Event\",\n  \"annotation\": \"Annotation\",\n  \"description\": \"Description\",\n  \"category\": {{categoryId}},\n  \"eventDate\": \"2030-01-01 12:00:00\",\n  \"paid\": false,\n  \"participantLimit\": 10,\n  \"requestModeration\": true\n}"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('201', () => pm.response.code === 201);",
                "pm.collectionVariables.set('eventId', pm.response.json().id);"
              ]
            }
          }]
        },

        {
          "name": "Publish event",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/admin/events/{{eventId}}",
            "body": {
              "mode": "raw",
              "raw": "{ \"stateAction\": \"PUBLISH_EVENT\" }"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('200', () => pm.response.code === 200);"
              ]
            }
          }]
        }

      ]
    },

    {
      "name": "User comments",
      "item": [

        {
          "name": "Create comment",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/users/{{userId}}/events/{{eventId}}/comments",
            "body": {
              "mode": "raw",
              "raw": "{ \"text\": \"My comment\" }"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('201', () => pm.response.code === 201);",
                "pm.collectionVariables.set('commentId', pm.response.json().id);"
              ]
            }
          }]
        },

        {
          "name": "Update own comment",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/users/{{userId}}/comments/{{commentId}}",
            "body": {
              "mode": "raw",
              "raw": "{ \"text\": \"Updated comment\" }"
            }
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('200', () => pm.response.code === 200);"
              ]
            }
          }]
        }

      ]
    },

    {
      "name": "Admin moderation",
      "item": [

        {
          "name": "Approve comment",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "{{baseUrl}}/admin/comments/{{commentId}}/approve"
          },
          "event": [{
            "listen": "test",
            "script": {
              "exec": [
                "pm.test('200', () => pm.response.code === 200);"
              ]
            }
          }]
        }

      ]
    }

  ]
}
