{
  "info": {
    "_postman_id": "9d2c6e7a-1f4a-4e55-9f9c-7c8c3b6a1234",
    "name": "Feature — Comments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User comments",
      "item": [
        {
          "name": "Create comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Очень крутое событие!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}/events/{{eventId}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}", "events", "{{eventId}}", "comments"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.environment.set(\"commentId\", pm.response.json().id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Update own comment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"Обновлённый комментарий\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}/comments/{{commentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}", "comments", "{{commentId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Delete own comment",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}/comments/{{commentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}", "comments", "{{commentId}}"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 204\", function () {",
                  "    pm.response.to.have.status(204);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Get comments by event",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/events/{{eventId}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["events", "{{eventId}}", "comments"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response is array\", function () {",
                  "    pm.expect(pm.response.json()).to.be.an(\"array\");",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Admin moderation",
      "item": [
        {
          "name": "Get comments for moderation",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/admin/comments?status=PENDING",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "comments"],
              "query": [
                {
                  "key": "status",
                  "value": "PENDING"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Approve comment",
          "request": {
            "method": "PATCH",
            "url": {
              "raw": "{{baseUrl}}/admin/comments/{{commentId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "comments", "{{commentId}}", "approve"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Reject comment",
          "request": {
            "method": "PATCH",
            "url": {
              "raw": "{{baseUrl}}/admin/comments/{{commentId}}/reject",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "comments", "{{commentId}}", "reject"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "userId",
      "value": "1"
    },
    {
      "key": "eventId",
      "value": "1"
    },
    {
      "key": "commentId",
      "value": "1"
    }
  ]
}
