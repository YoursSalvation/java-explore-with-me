{
  "info": {
    "_postman_id": "b7f5a1a9-9b7a-4a7f-9f77-comments-feature",
    "name": "Feature â€” Comments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Preparation",
      "item": [
        {
          "name": "Create user",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:8080/admin/users",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["admin", "users"]
            },
            "body": {
              "mode": "raw",
              "raw": "{ \"email\": \"user1@test.ru\", \"name\": \"User One\" }"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('201 Created', () => pm.response.to.have.status(201));",
                  "pm.environment.set('userId', pm.response.json().id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Create category",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:8080/admin/categories",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["admin", "categories"]
            },
            "body": {
              "mode": "raw",
              "raw": "{ \"name\": \"Comments category\" }"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('201 Created', () => pm.response.to.have.status(201));",
                  "pm.environment.set('categoryId', pm.response.json().id);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "User comments",
      "item": [
        {
          "name": "Create event",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:8080/users/{{userId}}/events",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["users", "{{userId}}", "events"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Event with comments\",\n  \"annotation\": \"This is a valid annotation for testing comments\",\n  \"description\": \"This is a valid description with more than twenty characters\",\n  \"category\": \"{{categoryId}}\",\n  \"eventDate\": \"2030-01-01 12:00:00\",\n  \"paid\": false,\n  \"participantLimit\": 10,\n  \"requestModeration\": true,\n  \"location\": { \"lat\": 10.0, \"lon\": 10.0 }\n}\n"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"201 Created\", () => {\n    pm.response.to.have.status(201);\n});\n\npm.environment.set(\"commentId\", pm.response.json().id);\n",
                  "pm.environment.set(\"eventId\", pm.response.json().id);"
                ]
              }
            }
          ]
        },
        {
          "name": "Create comment",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "http://localhost:8080/users/{{userId}}/events/{{eventId}}/comments",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["users", "{{userId}}", "events", "{{eventId}}", "comments"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"This is the first comment with valid length\"\n}\n"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"201 Created\", () => {\n    pm.response.to.have.status(201);\n});",
                  "pm.environment.set(commentId, pm.response.json().id);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Admin moderation",
      "item": [
        {
          "name": "Approve comment",
          "request": {
            "method": "PATCH",
            "url": {
              "raw": "http://localhost:8080/admin/comments/{{commentId}}/approve",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["admin", "comments", "{{commentId}}", "approve"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('200 OK', () => pm.response.to.have.status(200));"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}